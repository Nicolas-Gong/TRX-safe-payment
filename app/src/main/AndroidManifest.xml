<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限：用于与 TRON 节点通信 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 禁止备份（安全约束） -->
    <application
        android:name=".TrxSafeApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrxSafe"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        
        <!-- 主界面 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 转账界面 -->
        <activity
            android:name=".ui.TransferActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- 交易历史界面 -->
        <activity
            android:name=".ui.TransactionHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- 设置界面 -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 地址簿界面 -->
        <activity
            android:name=".ui.AddressBookActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 锁定界面 -->
        <activity
            android:name=".ui.LockActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
            
        <!-- 严格禁止导出任何组件给外部应用（安全约束） -->
        <!-- 禁止 WalletConnect、DApp 浏览器等功能 -->
    </application>

</manifest>
