<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 颜色系统 - 亮色模式 -->
    <!-- 主要颜色 - 专业蓝色，代表安全可信 -->
    <color name="primary">#1976D2</color>
    <color name="on_primary">#FFFFFF</color>
    <color name="primary_container">#E3F2FD</color>
    <color name="on_primary_container">#001B3E</color>

    <!-- 次要颜色 - 成功绿色，代表支付成功 -->
    <color name="secondary">#388E3C</color>
    <color name="on_secondary">#FFFFFF</color>
    <color name="secondary_container">#E8F5E8</color>
    <color name="on_secondary_container">#002108</color>

    <!-- 三级颜色 - 温暖橙色，用于强调和警告 -->
    <color name="tertiary">#F57C00</color>
    <color name="on_tertiary">#FFFFFF</color>
    <color name="tertiary_container">#FFF3E0</color>
    <color name="on_tertiary_container">#331400</color>

    <!-- 错误颜色 -->
    <color name="error">#D32F2F</color>
    <color name="on_error">#FFFFFF</color>
    <color name="error_container">#FFEBEE</color>
    <color name="on_error_container">#B71C1C</color>

    <!-- 表面和背景颜色 -->
    <color name="background">#FAFAFA</color>
    <color name="on_background">#1C1B1F</color>
    <color name="surface">#FFFFFF</color>
    <color name="on_surface">#1C1B1F</color>
    <color name="surface_variant">#F7F2FA</color>
    <color name="on_surface_variant">#49454F</color>
    <color name="surface_container">#F9F9F9</color>
    <color name="surface_container_high">#F3F3F3</color>

    <!-- 轮廓和分隔符 -->
    <color name="outline">#79747E</color>
    <color name="outline_variant">#C4C7C5</color>

    <!-- 阴影和提升 -->
    <color name="shadow">#000000</color>
    <color name="scrim">#000000</color>

    <!-- 兼容性颜色 (支持现有布局文件) -->
    <color name="background_primary">@color/background</color>
    <color name="text_primary">@color/on_surface</color>
    <color name="text_secondary">@color/on_surface_variant</color>
    <color name="card_background">@color/surface</color>
    <color name="divider">@color/outline_variant</color>

    <!-- 通用颜色 -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="success">#2E7D32</color>
    <color name="warning">#F57F17</color>
    <color name="info">#0277BD</color>
</resources>
