<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 交易详情卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 交易类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm_transaction_type"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvTransactionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRX 普通转账"
                    android:textSize="14sp"
                    android:textColor="@color/success"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="8dp" />

            <!-- 收款地址 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_recipient_address"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRecipientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TXYZoPE5CP4Gj4K..."
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="8dp" />

            <!-- 单价 -->
            <TextView
                android:id="@+id/tvPricePerUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_price_per_unit"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- 倍率 -->
            <TextView
                android:id="@+id/tvMultiplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_multiplier"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="8dp" />

            <!-- 总金额 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm_total_amount_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.0 TRX"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 安全提示卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/warning">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_security_notice"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvWarning1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✓ 不会授权资产"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvWarning2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✓ 不会调用合约"
                android:textSize="13sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 长按确认提示 -->
    <TextView
        android:id="@+id/tvHoldPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_hold_prompt"
        android:textSize="13sp"
        android:textColor="@color/info"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- 按钮组 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/confirm_hold_to_confirm"
            android:textSize="16sp"
            android:backgroundTint="@color/primary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginVertical="16dp" />

    <!-- 原始数据审计 -->
    <TextView
        android:id="@+id/btnShowRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看原始交易字节 (开发者审计)"
        android:textSize="12sp"
        android:textColor="@color/primary"
        android:layout_gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvRawHex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="10sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="monospace"
        android:background="#1A000000"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
